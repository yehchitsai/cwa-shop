{
  "name": "cwa-shop",
  "type": "module",
  "private": true,
  "version": "0.320.0",
  "scripts": {
    "dev": "VITE_CJS_IGNORE_WARNING=true vite",
    "dev:mock": "MOCK=1 npm run dev",
    "dev:mockapi": "MOCK=1 MOCK_AWS_API=1 npm run dev",
    "build": "ls -d src/sites/*/ | sed -r 's#src/sites/(.*)/#\\1#' | xargs -I {} sh -c 'ENTRY={} VITE_CJS_IGNORE_WARNING=true vite build'",
    "build:dev": "ls -d src/sites/*/ | sed -r 's#src/sites/(.*)/#\\1#' | xargs -I {} sh -c 'ENTRY={} VITE_CJS_IGNORE_WARNING=true vite build --mode development'",
    "build:spa": "vite build && npm run build:404",
    "build:gh": "BASENAME=1 MOCK=1 MOCK_AWS_API=1 npm run build:spa",
    "build:404": "cp dist/index.html dist/404.html",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "npm run lint -- --fix",
    "preview": "npm run build:spa && vite preview",
    "preview:gh": "MOCK=1 MOCK_AWS_API=1 PREVIEW=1 BASENAME=1 npm run build:gh && vite preview",
    "prepare": "husky install",
    "prettier": "prettier --check '**/*.{json,md,yml,sh}'",
    "prettier:fix": "prettier --write '**/*.{json,md,yml,sh}'",
    "style": "stylelint **/*.css",
    "style:fix": "npm run style -- --fix"
  },
  "dependencies": {
    "@react-hooks-library/core": "^0.6.2",
    "axios": "^1.12.0",
    "classnames": "^2.3.2",
    "daisyui": "^4.7.2",
    "date-fns": "^2.30.0",
    "filesize": "^10.1.0",
    "formik": "^2.4.5",
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-resources-to-backend": "^1.1.4",
    "jotai": "^2.13.1",
    "js-cookie": "^3.0.5",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "match-sorter": "^6.3.1",
    "motion": "^12.23.12",
    "p-queue": "npm:@esm2cjs/p-queue@^7.3.0",
    "query-string": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-error-boundary": "^4.0.11",
    "react-hot-toast": "^2.4.1",
    "react-hotkeys-hook": "^5.1.0",
    "react-i18next": "^13.2.2",
    "react-icons": "^4.11.0",
    "react-image": "^4.1.0",
    "react-loading-skeleton": "^3.3.1",
    "react-router-dom": "^7.5.2",
    "react-slick": "^0.29.0",
    "safe-await": "^2.0.0",
    "slick-carousel": "^1.8.1",
    "swr": "^2.2.4",
    "video.js": "^8.6.1",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.15",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-tailwindcss": "^3.17.3",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-sh": "^0.14.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss-content-visibility": "^1.0.0",
    "vite": "^6.4.1",
    "vite-bundle-analyzer": "^0.8.1",
    "vite-plugin-mock": "^3.0.2"
  },
  "lint-staged": {
    "**/*.{js,jsx}": [
      "eslint --fix"
    ],
    "**/*.css": [
      "stylelint --fix"
    ],
    "**/!(package.lock).{json,md,yml,sh}": [
      "prettier --write"
    ]
  }
}
